<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercarse">EDITAR PERSONA</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post">
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="name" id="name" placeholder="Ejemplo: Luis" value="{{persona.name}}" autofocus required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="lasname" class="input-group-text">Apellido</label>
                        <input class="form-control" type="text" name="lasname" id="lasname" placeholder="Ejemplo: Angel" value="{{persona.lasname}}" required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="age" class="input-group-text">Edad</label>
                        <input class="form-control" type="number" name="age" id="age" placeholder="0" value="{{persona.age}}" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>