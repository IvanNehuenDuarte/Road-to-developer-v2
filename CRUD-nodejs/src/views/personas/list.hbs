<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">lista de personas</h3>
        {{#if personas}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Edad</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="4">Registro de personas</td>
                    </tr>
                </tfoot>
                <tbody>
                    {{#each personas}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{lasname}}</td>
                            <td>{{age}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2 px-3">
                                    <i class="fa-solid fa-pencil"></i></a>
                                    <a href="/delete/{{id}}" class="btn btn-success p-2 px-3">
                                    <i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crar una persona</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este botón para que puedas registrar a una persona en la aplciación</p>
                    <a href="#" class="btn btn-primary">Ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>